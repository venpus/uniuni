/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>

/ {
	model = "eb01_pcb_revA";
	compatible = "grem,eb01-pcb-reva";

	chosen {
        zephyr,console = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

    zephyr,user {
		io-channels = <&adc 0>;
	};

    leds {
        compatible = "gpio-leds";

        led_bat: led_bat {
            gpios = < &gpio0 22 GPIO_ACTIVE_HIGH >;
            label = "Battery Status LED. Red";
        };

        led_dbg: led_dbg {
            gpios = < &gpio0 24 GPIO_ACTIVE_HIGH >;
            label = "Debug Signal LED. Green";
        };
    };

    buttons {
        compatible = "gpio-keys";

        button0: button0 {
            gpios = < &gpio0 17 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>;
            label = "User Push Button";
        };
        wakeup-source;
    };

    pwmbuzzer {
        compatible = "pwm-leds";

        buzzer0: buzzer0 {
            pwms = < &pwm0 0 PWM_KHZ(4) PWM_POLARITY_NORMAL >;
            label = "Buzzer";
        };
    };

    aliases {
        sw0 = &button0;
        sound0 = &buzzer0;
    };
};

&gpiote {
    status = "okay";
};

&gpio0 {
    status = "okay";
};

&gpio1 {
    status = "okay";
};

&pwm0 {
    status = "okay";

    pinctrl-0 = <&pwm0_default>;
    pinctrl-1 = <&pwm0_sleep>;

    pinctrl-names = "default", "sleep";
};

&adc {
    status = "okay";

    #address-cells = <1>;
    #size-cells = <0>;

    channel@0 {
        reg = <0>;
        zephyr,gain = "ADC_GAIN_1_6";
        zephyr,reference = "ADC_REF_INTERNAL";
        zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
        zephyr,input-positive = <NRF_SAADC_AIN0>; /* P0.02 */
        zephyr,resolution = <12>;
    };
};

&uart0 {
    compatible = "nordic,nrf-uart";
    status = "okay";

    current-speed = <115200>;
    
    pinctrl-0 = <&uart0_default>;
    pinctrl-1 = <&uart0_sleep>;

    pinctrl-names = "default", "sleep";
};


&pinctrl {

    // P1.02 - DBG_RX
    // P1.04 - DBG_TX

    uart0_default: uart0_default {
        group1 {
            psels = <NRF_PSEL(UART_TX, 1, 4)>, <NRF_PSEL(UART_RX, 1, 2)>;
        };
    };

    uart0_sleep: uart0_sleep {
        group1 {
            psels = <NRF_PSEL(UART_TX, 1, 4)>, <NRF_PSEL(UART_RX, 1, 2)>;
            low-power-enable;
        };
    };

    // P0.15 - Sound (PWM)

    pwm0_default: pwm0_default {
        group1 {
            psels = <NRF_PSEL(PWM_OUT0, 0, 15)>;
        };
    };

    pwm0_sleep: pwm0_sleep {
        group1 {
            psels = <NRF_PSEL(PWM_OUT0, 0, 15)>;
            low-power-enable;
        };
    };
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x0 0xc000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0xc000 0x72000>;
		};
		slot1_partition: partition@7e000 {
			label = "image-1";
			reg = <0x7e000 0x72000>;
		};
		scratch_partition: partition@f0000 {
			label = "image-scratch";
			reg = <0xf0000 0xa000>;
		};
		storage_partition: partition@fa000 {
			label = "storage";
			reg = <0xfa000 0x6000>;
		};
	};
};

